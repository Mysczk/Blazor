@foreach (var task in Tasks.Where(t => t.Type == Type))
{
    <TaskItem Task="task" OnMoveTask="HandleMoveTask" OnRemove="RemoveTask" />
}

@code {
    [Parameter]
    public TaskType Type { get; set; }

    [Parameter]
    public List<TaskModel> Tasks { get; set; } = new List<TaskModel>();

    [Parameter]
    public EventCallback<(TaskModel task, TaskType newType)> OnMoveTask { get; set; }

    private void RemoveTask(TaskModel task)
    {
        Tasks.Remove(task);
    }

    private async Task HandleMoveTask((TaskModel task, TaskType newType) moveTask)
    {
        // Zavoláme rodičovskou komponentu a předáme jí informaci o přesunu
        await OnMoveTask.InvokeAsync(moveTask);
    }
}